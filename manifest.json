{
  "manifest_version": 2,

  "name": "Invite All My Friends: Easy Event Invitations",
  "short_name": "Invite All My Friends",
  "description": "Autoselect all Facebook friends for event and page invitations.",
  "version": "2.1",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "declarativeContent",
        "tabs",
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
    ],

  "page_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
