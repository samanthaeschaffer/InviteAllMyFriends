{
  "manifest_version": 2,

  "name": "Invite-All: Easy Mass Facebook Event Invitations",
  "description": "Autoselect all Facebook friends for event invitations.",
  "version": "1.0",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "declarativeContent",
        "tabs",
        "http://www.facebook.com/events/*",
        "https://www.facebook.com/events/*"
    ],

  "page_action": {
    "default_icon": "icon48.png"
  },

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
